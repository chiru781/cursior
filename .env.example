# Browser Configuration
BROWSER=chrome
HEADLESS=false
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Application URLs
BASE_URL=https://demo-ecommerce.com
API_BASE_URL=https://api.demo-ecommerce.com

# Test Environment
ENVIRONMENT=staging

# Timeouts (in seconds)
IMPLICIT_WAIT=10
EXPLICIT_WAIT=10
PAGE_LOAD_TIMEOUT=30

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password
DB_TYPE=postgresql

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# Test Data
TEST_DATA_DIR=data/test_data

# Reporting
REPORT_DIR=reports
SCREENSHOT_DIR=reports/screenshots
LOG_DIR=logs
LOG_LEVEL=INFO

# Parallel Execution
PARALLEL_PROCESSES=1

# API Configuration
API_TIMEOUT=30
API_RETRIES=3

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=SecurePass123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=AdminPass123!

# Feature Flags
ENABLE_API_TESTING=true
ENABLE_DATABASE_TESTING=true
ENABLE_EMAIL_TESTING=false
TAKE_SCREENSHOTS_ON_FAILURE=true